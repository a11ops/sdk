  "homepage": "https://github.com/a11ops/sdk",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a11ops/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/a11ops/sdk/issues"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
