{
  "name": "@a11ops/sdk",
  "version": "1.0.0",
  "description": "Official Node.js SDK for a11ops - Push notification infrastructure for critical alerts",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint src/",
    "prepublishOnly": "npm test && npm run lint",
